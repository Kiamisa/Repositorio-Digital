FROM python:3.11-slim

WORKDIR /app

# Instala dependências do sistema para o Docling/OCR (libs gráficas são necessárias)
RUN apt-get update && apt-get install -y \
    build-essential \
    libgl1 \
    libglib2.0-0 \
    build-essential \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY app.py .
RUN mkdir uploads

# O host 0.0.0.0 é obrigatório dentro do Docker
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]